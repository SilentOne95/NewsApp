<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    style="@style/basic_dimen_setting">

    <TextView
        android:id="@+id/section"
        style="@style/section_text_view" />

    <TextView
        android:id="@+id/title"
        style="@style/title_text_view"/>

    <RelativeLayout
        style="@style/relative_layout">

        <TextView
            android:id="@+id/author"
            style="@style/author_text_view" />

        <TextView
            android:id="@+id/date"
            style="@style/date_text_view"/>

    </RelativeLayout>

</LinearLayout>